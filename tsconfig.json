{
    "compilerOptions": {
      "target": "ES6",                         
      "module": "commonjs",                    
      "strict": false,                          
      "esModuleInterop": true,                 
      "skipLibCheck": true,                    
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",                      
      "rootDir": "./src",                      
      "resolveJsonModule": true,               
      "moduleResolution": "node",              
      "lib": ["ES6", "DOM"]                    
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  